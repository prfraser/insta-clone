<%= form_for @post, url: posts_path, :html => { :class => "form-horizontal post" } do |f| %>

  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :img_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :img_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:img_url) %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :avatar %>
    </div>
    <%=f.error_span(:avatar) %>
  </div>

  <div class="form-group">
    <%= f.label :caption, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :caption, :class => 'form-control' %>
    </div>
    <%=f.error_span(:caption) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
