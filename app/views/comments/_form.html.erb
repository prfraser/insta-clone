<%= form_with(model: [@post, @post.comments.build ], local: true) do |form| %>  

  <div class="form-group">
    <div class="col-lg-10">
      <%= form.text_field :title, :class => 'form-control' %>
    </div>
    <%=form.error_span(:caption) %>
  </div>
  
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary' %>
  </div>

<% end %>
